@model Banka.FunctionalityViewModels.VrabotenSmetkiViewModel

@{
    ViewData["Title"] = "AddVrabotenSmetki";
}

<h2>Препиши сметки на координатор</h2>
<hr />

<form asp-action="AddVrabotenSmetki">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.DisplayNameFor(model => model.vrabotenId): <select asp-for="vrabotenId" asp-items="Model.Vraboteni">
        <option value="">Select</option>
    </select>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="kompaniskiSmetkiIds" class="control-label"></label>
                <select asp-for="kompaniskiSmetkiIds" class="form-control js-example-basic-multiple" asp-items="Model.kompaniskiSmetki">
                </select>
            </div>
        </div>
        <div class="form-group col-md-12">
            <hr />
            <input type="submit" value="Препиши сметки" class="btn btn-default" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Назад кон главна страна</a>
</div>


