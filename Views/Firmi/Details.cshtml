@model Banka.Models.Firma

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Firma</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.firmName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.firmName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.dataOsnovanje)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.dataOsnovanje)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sopstvenici)
        </dt>
        <dd>
            @foreach (var sopstvenik in Model.Sopstvenici)
            {
                <a asp-controller="Korisnici" asp-action="Details" asp-route-id="@sopstvenik.Id">@sopstvenik.Sopstvenik.FullName</a><br />
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.kompaniskiSmetki)
        </dt>
        <dd>
            @foreach (var smetka in Model.kompaniskiSmetki)
            {
                <a asp-controller="KompaniskiSmetki" asp-action="Details" asp-route-id="@smetka.Id">@smetka.bankarskiBroj</a><br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
