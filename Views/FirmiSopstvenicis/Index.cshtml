@model IEnumerable<Banka.Models.FirmiSopstvenici>

@{
    ViewData["Title"] = "Index";
}

<h2>Фирми со сопственици</h2>

<p>
    <a asp-action="AddOwnerFirms">Препиши фирми на сопственик</a> | <a asp-action="DeleteOwnerFirms">Избриши фирми на сопственик</a>
</p>

<!--<p>
    <a asp-action="Create">Create New</a>
</p> -->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sopstvenik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firma)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sopstvenik.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Firma.firmName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
